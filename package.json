    "@cdktf/provider-local": "^10.1.1",
    "@metalsmith/in-place": "^4.6.0",
    "@swc/core": "^1.9.1",
    "cdktf": "^0.20.9",
    "cdktf-cli": "^0.20.9",
    "cfonts": "^3.3.0",
    "chalk": "^4.1.2",
    "cli-table": "^0.3.11",
    "constructs": "^10.4.2",
    "fast-xml-parser": "^4.5.0",
    "got": "^11.8.6",
    "handlebars": "^4.7.8",
    "json5": "^2.2.3",
    "jstransformer-handlebars": "^1.2.0",
    "lodash.clonedeep": "^4.5.0",
    "metalsmith": "^2.6.3",
    "metalsmith-renamer": "^0.5.217",
    "ora": "^5.4.1",
    "source-map-support": "^0.5.21",
    "vorpal": "^1.12.0",
    "zod": "^3.23.8"
  },
  "scripts": {
    "get": "cdktf get",
    "synth": "cdktf synth",
    "prepare": "husky install",
    "test": "jest --no-cache -w 4",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo && find . | grep -v node_modules | grep '\\.js$' | xargs rm -f",
    "typecheck": "tsc --noEmit",
    "perms": "chmod +x ./bin/*.js",
    "build": "pnpm run clean && tsc && pnpm run perms",
    "eslint": "eslint --max-warnings=0 '**/*.{ts,js,json}'",
    "eslint-fix": "npx eslint --fix||true",
    "prettier-check": "npx prettier --check --ignore-path .gitignore --ignore-path .prettierignore '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier-fix": "pnpm run prettier-check --write",
    "prettify": "pnpm run eslint-fix && pnpm run prettier-fix",
    "lint": "pnpm run eslint && pnpm run prettier-check",
    "pre-commit": "pnpm run typecheck && pnpm run lint",
    "ci": "pnpm run typecheck && pnpm run test && pnpm run lint && pnpm run build",
    "refresh-waf-rules": "aws wafv2 list-available-managed-rule-groups --scope CLOUDFRONT > docs/aws-managed-waf-rules.json"
  }
}
