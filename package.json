{
  "name": "site-o-matic",
  "version": "0.0.2",
  "description": "Automatic website cloud deployment tool",
  "author": "Konrad Markus <konker@iki.fi>",
  "main": "./bin/index.js",
  "type": "commonjs",
  "bin": {
    "site-o-matic": "./bin/index.js",
    "som": "./bin/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.2",
    "@types/jest": "^29.5.5",
    "@types/jszip": "^3.4.1",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/metalsmith": "^2.6.0",
    "@types/node": "^20.6.2",
    "@types/vorpal": "^1.12.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@typescript-eslint/typescript-estree": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "git-list-updated": "^1.2.1",
    "gulp": "^4.0.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-acm": "^3.414.0",
    "@aws-sdk/client-codecommit": "^3.414.0",
    "@aws-sdk/client-codestar-connections": "^3.414.0",
    "@aws-sdk/client-iam": "^3.414.0",
    "@aws-sdk/client-route-53": "^3.414.0",
    "@aws-sdk/client-s3": "^3.414.0",
    "@aws-sdk/client-secrets-manager": "^3.414.0",
    "@aws-sdk/client-sns": "^3.414.0",
    "@aws-sdk/client-ssm": "^3.414.0",
    "@aws-sdk/client-sts": "^3.414.0",
    "@metalsmith/in-place": "^4.6.0",
    "@swc/core": "^1.3.85",
    "ajv": "^8.12.0",
    "aws-cdk-lib": "^2.96.2",
    "cdk": "^2.96.2",
    "cfonts": "^3.2.0",
    "chalk": "^4.1.2",
    "cli-table": "^0.3.11",
    "constructs": "^10.2.70",
    "fast-xml-parser": "^4.2.7",
    "got": "^11.8.6",
    "handlebars": "^4.7.8",
    "json5": "^2.2.3",
    "jstransformer-handlebars": "^1.2.0",
    "lodash.clonedeep": "^4.5.0",
    "metalsmith": "^2.6.1",
    "metalsmith-renamer": "^0.5.217",
    "ora": "^5.4.1",
    "source-map-support": "^0.5.21",
    "vorpal": "^1.12.0"
  },
  "scripts": {
    "prepare": "husky install",
    "test": "jest --no-cache -w 4",
    "clean": "rm -rf dist && rm -f tsconfig.tsbuildinfo && find . | grep -v node_modules | grep '\\.js$' | xargs rm",
    "typecheck": "tsc --noEmit",
    "build": "pnpm clean && tsc && gulp copy-static",
    "perms": "chmod +x ./bin/*.js",
    "eslint": "eslint --max-warnings=0 '**/*.{ts,js,json}'",
    "eslint-fix": "npx eslint --fix||true",
    "prettier-check": "npx prettier --check --ignore-path .gitignore --ignore-path .prettierignore '**/*.{css,html,js,ts,json,md,yaml,yml}'",
    "prettier-fix": "pnpm prettier-check --write",
    "prettify": "pnpm eslint-fix && pnpm prettier-fix",
    "lint": "pnpm eslint && pnpm prettier-check",
    "pre-commit": "pnpm typecheck && pnpm lint",
    "ci": "pnpm typecheck && pnpm test && pnpm lint && pnpm build && pnpm perms",
    "refresh-waf-rules": "aws wafv2 list-available-managed-rule-groups --scope CLOUDFRONT > docs/aws-managed-waf-rules.json"
  }
}
