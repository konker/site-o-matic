    "@aws-sdk/client-iam": "^3.687.0",
    "@aws-sdk/client-route-53": "^3.687.0",
    "@aws-sdk/client-s3": "^3.688.0",
    "@aws-sdk/client-secrets-manager": "^3.687.0",
    "@aws-sdk/client-sns": "^3.687.0",
    "@aws-sdk/client-ssm": "^3.687.0",
    "@aws-sdk/client-sts": "^3.687.0",
