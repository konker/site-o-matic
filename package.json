{
  "name": "site-o-matic",
  "version": "0.1.0",
  "description": "Automatic website cloud deployment tool",
  "author": "Konrad Markus <konker@iki.fi>",
  "main": "./dist/bin/index.js",
  "bin": {
    "site-o-matic": "./bin/index.js",
    "som": "./bin/index.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/jest": "^26.0.10",
    "@types/jszip": "^3.4.1",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/metalsmith": "^2.3.1",
    "@types/node": "^18.6.5",
    "@types/vorpal": "^1.12.1",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-fp": "^2.3.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "git-list-updated": "^1.2.1",
    "handlebars": "^4.7.7",
    "jest": "^28.1.0",
    "pkg": "^5.8.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@aws-sdk/client-acm": "^3.154.0",
    "@aws-sdk/client-codecommit": "^3.168.0",
    "@aws-sdk/client-codestar-connections": "^3.357.0",
    "@aws-sdk/client-iam": "^3.145.0",
    "@aws-sdk/client-route-53": "3.131.0",
    "@aws-sdk/client-s3": "^3.142.0",
    "@aws-sdk/client-secrets-manager": "^3.142.0",
    "@aws-sdk/client-ssm": "^3.142.0",
    "@aws-sdk/client-sts": "^3.145.0",
    "@metalsmith/in-place": "^4.5.0",
    "ajv": "^8.11.0",
    "aws-cdk-lib": "^2.85.0",
    "cdk": "^2.85.0",
    "cfonts": "^2.9.3",
    "cli-table": "^0.3.6",
    "constructs": "^10.1.83",
    "fast-xml-parser": "^4.0.7",
    "got": "^11.8.2",
    "jstransformer-handlebars": "^1.2.0",
    "jszip": "^3.10.1",
    "lodash.clonedeep": "^4.5.0",
    "metalsmith": "^2.5.0",
    "metalsmith-renamer": "^0.5.204",
    "ora": "^5.4.1",
    "source-map-support": "^0.5.16",
    "vorpal": "^1.12.0"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "watch": "tsc -w",
    "test": "jest",
    "lint": "npx eslint --ignore-path=.gitignore .",
    "lint-updated": "pipe-git-updated --base=main --ext=js --ext=ts -- eslint --ignore-pattern '!*'",
    "lint-fix-updated": "pipe-git-updated --base=main --ext=js --ext=ts -- eslint --fix --ignore-pattern '!*'",
    "prettier-check-updated": "pipe-git-updated --base=main --ext=css --ext=html --ext=js --ext=ts --ext=json --ext=md --ext=yaml --ext=yml -- prettier -c",
    "prettify": "npm run lint-fix-updated && npm run prettify-updated",
    "prettify-updated": "pipe-git-updated --base=main --ext=css --ext=html --ext=js --ext=ts --ext=json --ext=md --ext=yaml --ext=yml -- prettier --write",
    "check-updated": "npm run lint-updated && npm run prettier-check-updated",
    "refresh-waf-rules": "aws wafv2 list-available-managed-rule-groups --scope CLOUDFRONT > docs/aws-managed-waf-rules.json"
  }
}
