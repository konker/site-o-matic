    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@aws-sdk/client-acm": "^3.687.0",
    "@aws-sdk/client-cloudformation": "^3.687.0",
    "@aws-sdk/client-codecommit": "^3.687.0",
